{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./build",
    "lib": ["es5", "es6", "es2020"],
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["node", "mocha"]
  },
  "exclude": ["node_modules"]
}
